<resources>


    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="android:fontFamily">@font/singnika_regular</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="FullScreenTheme" parent="BaseAppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_corner_white_bg</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!--        <item name="windowActionBar">false</item>-->
    </style>


    <style name="alert_dialog_theme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/trans_black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Regular" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="Regular.Large">
        <item name="android:textSize">@dimen/_24sdp</item>
    </style>

    <style name="Regular.Small">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Regular.Micro">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="Regular.Micro10">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="Regular.Mini">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>


    <style name="Medium" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="Medium.Large">
        <item name="android:textSize">@dimen/_24sdp</item>
    </style>

    <style name="Medium.Small">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Medium.Small18">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>


    <style name="Medium.Micro">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="Medium.Micro10">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Medium.Mini">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>


    <style name="Bold" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="Bold.Large">
        <item name="android:textSize">@dimen/_24sdp</item>
    </style>

    <style name="Medium.Huge">
        <item name="android:textSize">@dimen/_32sdp</item>
    </style>

    <style name="Bold.Small">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Bold.Micro">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="Bold.Micro10">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Bold.Mini">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="AppTheme.LayoutRipple">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="AppTheme.LayoutRippleCircle">
        <item name="android:foreground">?attr/actionBarItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="AppTheme.SmallChipWhite">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>


    <style name="AppTheme.SmallChipRegular" parent="AppTheme.SmallChipWhite">
        <item name="android:fontFamily">@font/signika_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextAppearance.TimeDurationPicker" parent="TextAppearance.AppCompat.Body1" />

    <style name="TextAppearance.TimeDurationPicker.Display">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Unit">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Button">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Display.Large">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Unit.Large">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Button.Large">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Display.Dark">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Unit.Dark">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Display.Large.Dark">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="TextAppearance.TimeDurationPicker.Unit.Large.Dark">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="Widget" />

    <style name="Widget.TimeDurationPicker">
        <item name="textAppearanceDisplay">@style/TextAppearance.TimeDurationPicker.Display</item>
        <item name="textAppearanceUnit">@style/TextAppearance.TimeDurationPicker.Unit</item>
        <item name="textAppearanceButton">@style/TextAppearance.TimeDurationPicker.Button</item>
        <item name="backspaceIcon">@drawable/ic_backspace</item>
        <item name="clearIcon">@drawable/ic_clear</item>
    </style>

    <style name="Widget.TimeDurationPicker.Large">
        <item name="textAppearanceDisplay">@style/TextAppearance.TimeDurationPicker.Display.Large
        </item>
        <item name="textAppearanceUnit">@style/TextAppearance.TimeDurationPicker.Unit.Large</item>
        <item name="textAppearanceButton">@style/TextAppearance.TimeDurationPicker.Button.Large
        </item>
    </style>

    <style name="Widget.TimeDurationPicker.Light">
        <item name="backspaceIcon">@drawable/ic_backspace_light</item>
        <item name="clearIcon">@drawable/ic_backspace_light</item>
    </style>

    <style name="Widget.TimeDurationPicker.Large.Light">
        <item name="backspaceIcon">@drawable/ic_backspace_light</item>
        <item name="clearIcon">@drawable/ic_backspace_light</item>
    </style>

    <style name="Widget.TimeDurationPicker.Dialog">
        <item name="durationDisplayBackground">?colorControlActivated</item>
        <item name="textAppearanceDisplay">
            @style/TextAppearance.TimeDurationPicker.Display.Large.Dark
        </item>
        <item name="textAppearanceUnit">@style/TextAppearance.TimeDurationPicker.Unit.Large.Dark
        </item>
    </style>

    <style name="Widget.TimeDurationPicker.NumPadButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">@dimen/touchable</item>
        <item name="android:minHeight">@dimen/touchable</item>
        <item name="android:textAppearance">@style/TextAppearance.TimeDurationPicker.Display</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Text_Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Text_Title.Bold">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text_Big_Title" parent="Text_Title">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="Text_Big_Title.Bold" parent="Text_Big_Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Recycler_Item_Title" parent="Text_Title">
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="AppBar_Title10">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

</resources>
